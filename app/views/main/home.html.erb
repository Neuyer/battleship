<style type="text/css">
.game {
    width: 500px;
    height: 500px;
    margin: 50px 50px 0px 50px;
    background-color: #34495e;
    color: #fff;
    border: 1px solid #2c3e50;
    border-radius: 5px;
    display: grid;
    grid-template: repeat(10, 1fr) / repeat(10, 1fr);
    float: left;
    transform:rotateX(0deg);
}
  
.game > div {
    border: 1px solid #2c3e50;
    border-radius: 1px;
    font-family: Helvetica;
    font-weight: bold;
    font-size: 1em;
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>

<div class='game' id='board1'></div>
<div class='game' id='board2'></div>

<%= javascript_include_tag "battleship", "data-turbolinks-track" => true  %>
<script>
battleship.init( document.querySelector('#board1') );
battleship.init1( document.querySelector('#board2') );
battleship.start();
</script>